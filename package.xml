<?xml version="1.0" encoding="UTF-8"?>
<package name="de.energy-dev.wcf.letterboxd_profile" xmlns="http://www.woltlab.com" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.woltlab.com http://www.woltlab.com/XSD/maelstrom/package.xsd">
